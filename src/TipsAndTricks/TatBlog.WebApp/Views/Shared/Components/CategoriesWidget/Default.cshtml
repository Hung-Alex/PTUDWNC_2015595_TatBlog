@model IList<CategoryItem>
<div class="list-group">
    @foreach (var item in Model)
    {
        <li class="list-group-item">
            <a asp-controller="Blog"
                asp-action="Category"
                asp-route-slug="@item.UrlSlug"
                title="@item.Description">
            
                @item.Name
                <span>(@item.PostCount)</span>
            </a>
        </li>
    }
</div>