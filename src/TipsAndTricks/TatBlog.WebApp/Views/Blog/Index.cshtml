@model IPagedList<Post>
@{
    ViewData["Title"]="Trang Chủ";
    var postQuey = (ViewBag.PostQuey as PostQuey) ?? new PostQuey();
}
<h1>
    Đây là trang chủ
</h1>
<p>
    <div class="p-4">
        @if (!string.IsNullOrWhiteSpace(postQuey.Keyword))
        {
            <h3 class="text-primary mb-3">
                Những bài viết chứa từ khóa '@postQuey.Keyword'
            </h3>
        }
       
            @foreach (var postItem in Model)
            {
                <partial name="_PostList" model="postItem" />// 
           }
     <partial  name="_Pager" model="Model"/>
       
    </div>
</p>