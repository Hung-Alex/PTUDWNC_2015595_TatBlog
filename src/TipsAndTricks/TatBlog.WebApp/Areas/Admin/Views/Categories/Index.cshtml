@model TatBlog.WebApp.Areas.Admin.Models.CategoriesFilterModel
@{
    ViewData["Title"] = "Danh sách chủ đề";
    var categoriesList = ViewBag.CategoriesList as IPagedList<Category>;
}
<partial name="_CategoriesFilterPane" model="Model" />

@if (categoriesList != null && categoriesList.Count > 0)
{
    <table class="table table-responsive table-striped">
        <thead>
            <tr>
                <th>Tên</th>
                <th>Mô tả</th>
                
            </tr>
        </thead>

        <tbody>
            @foreach (var category in categoriesList)
            {
                <tr>
                    <td>
                        <a asp-area="Admin"
                   asp-controller="Categories"
                   asp-action="Edit"
                   asp-route-id="@category.Id"
                           class="fw-bold">
                            @category.Name
                        </a>

                        <p class="text-muted">@category.Description</p>
                    </td>
                    <td>
                        @category.Description
                    </td>
                    <td>
                    <form method="post"
                  asp-area="Admin"
                      asp-controller="Categories"
                  asp-action="DeleteCategory">
                        <input type="hidden" name="id" value="@category.Id" />
                        <button type="submit" class="btn btn-danger">Xóa</button>

                    </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <h1 class="text-danger">Không tìm thấy bài viết nào</h1>
}